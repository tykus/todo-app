<div class="projects delete">
  <h2>Delete Project</h2>

  <%= form_for(:project, :url => {:action => 'destroy', :id => @project.id}, :html => {:method => :delete}) do |f| %>
    <p>Are you sure you want to permanently delete this project?</p>
    <p class="reference-name"><%= @project.title %></p>
  
    <div class="form-buttons">
      <%= submit_tag('Delete Project') %>
    </div>

  <% end %>
</div>