<div class="tasks delete">
  <h2>Delete Task</h2>

  <%= form_for(:task, :url => {:action => 'destroy', :id => @task.id}, :html => {:method => :delete}) do |f| %>
    <p>Are you sure you want to permanently delete this task?</p>
    <p class="reference-name"><%= @task.title %></p>
  
    <div class="form-buttons">
      <%= submit_tag('Delete Task') %>
    </div>

  <% end %>
</div>